<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">


    <!-- ==================== PROPERTIES ==================== -->
    <Properties>
        <!-- Absolute path (SAFE & GUARANTEED) -->
        <Property name="LOG_PATH">${sys:user.dir}/logs</Property>
        <Property name="LOG_FILE">CardsTransactionService</Property>
    </Properties>

    <!-- ==================== APPENDERS ==================== -->
    <Appenders>

        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %c{1} - %msg%n"/>
        </Console>

        <!-- Rolling File Appender -->
        <RollingFile
                name="FileLogger"
                fileName="${LOG_PATH}/${LOG_FILE}.log"
                filePattern="${LOG_PATH}/${LOG_FILE}-%d{yyyy-MM-dd}-%i.log.gz"
                createOnDemand="true">

            <PatternLayout>
                <Pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %c - %msg%n
                </Pattern>
            </PatternLayout>

            <!-- Roll over daily or if file exceeds 10MB -->
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

            <!-- Keep last 30 files -->
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

    </Appenders>

    <!-- ==================== LOGGERS ==================== -->
    <Loggers>

        <!-- Application Logs -->
        <Logger name="com.maybank.cards" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- Spring Framework (reduce noise) -->
        <Logger name="org.springframework" level="WARN"/>

        <!-- Hibernate SQL (optional) -->
        <Logger name="org.hibernate.SQL" level="INFO"/>
        <Logger name="org.hibernate.type.descriptor.sql" level="TRACE"/>

        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>

    </Loggers>

</Configuration>
